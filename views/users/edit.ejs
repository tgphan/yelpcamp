<% include ../partials/header %>
<div class="ui grid container">
    <div class="ui right floated right aligned">
        <li>alskdfjlasd</li>
    </div>
    <div class="ui grid">
        <div class="ui form" action="/users/<%= user.username %>?_method=PUT" method="POST">
            <div class="ui message">
                <div class="header"><%= messageHeader %></div>
                <%= message %>
            </div>
            <div class="fields">
                <div class="field">
                    <label>First Name</label>
                    <input type="text" name="user[firstName]" value="<%= user.firstName %>">
                </div>
                <div class="field">
                    <label>Last Name</label>
                    <input type="text" name="user[lastName]" value="<%= user.lastName %>">
                </div>
                <div class="field">
                    <label>To apply changes, please enter your password</label>
                    <input type="password" name="password" value="<%= user.lastName %>">
                </div>
            </div>
            <button class="ui button" type="submit">Submit</button>
        </div>
    </div>
</div>

