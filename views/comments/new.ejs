<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Join the discussion on <%= campground.name %></h1>
        <div style="width: 60%; margin: 25px auto;">
            <form action='/campgrounds/<%= campground._id %>/comments' method='POST'>
                <div class="form-group">
                    <textarea class="form-control" name="comment[text]">Share your thoughts!</textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                    <div class="form-group">
                    </div>
            </form>
            <% for (const comment of campground.comments) { %>
            <p><strong><%= comment.author %></strong> - <%= comment.text %></p>
            <% } %>
            <a href="/campgrounds/<%= campground._id %>">Go back</a>
        </div>

    </div>
</div>
<% include ../partials/footer %>