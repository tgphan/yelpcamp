<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%=  campground.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action='/campgrounds/<%= campground._id %>?_method=PUT' method='POST'>
                <div class="form-group">
                    <input class="form-control" type='text' value='<%= campground.name %>' name='campground[name]'>
                </div>
                <div class="form-group">
                    <input class="form-control" type='text' value='<%= campground.image %>' name='campground[image]'>
                </div>
                <div class="form-group">
                    <textarea required name='campground[description]'><%= campground.description %></textarea>
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" value="<%= campground.location %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type='number' value="<%= campground.price %>"  step="0.01" name='campground[price]'>
                </div>
                <div>
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <form action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
                <button class="btn btn-danger">Delete</button>
            </form>
            <a href="/campgrounds/<%= campground._id %>">Go back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>