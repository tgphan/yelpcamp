<!DOCTYPE html>
<html>

<head>
    <link rel="stylesheet" type="text/css" href="/dist/semantic.min.css">
    <link rel="stylesheet" href="/stylesheets/main.css">

    <script src="/lib/jquery-3.4.1.min.js"></script>
    <script src="/dist/semantic.min.js" type="text/javascript"></script>
    <title>YelpCamp</title>
</head>

<body>
    <div class="ui grid container">
        <div class="ui secondary menu row">
            <a class="item" href="/campgrounds">
                YelpCamp
            </a>
            <div class="right menu">
                <div class="item">
                    <div class="ui icon input">
                        <input type="text" placeholder="Search...">
                        <i class="search link icon"></i>
                    </div>
                </div>
                <% if(!currentUser) { %>
                <a class="item" href="/login">
                    Login
                </a>
                <a class="item active" href="/register">
                    Sign Up
                </a>
                <% } else { %>

                <div class="ui item dropdown">
                    Notifications
                    <i class="dropdown icon">
                        <%= newNotifications.length %>
                    </i>
                    <% if (newNotifications.length > 0) { %>
                    <div class="menu">
                        <% for (const notification of newNotifications) { %>
                        <div class="item">
                            <a href="/users/notifications/<%= notification._id %>">
                                <%= notification.username %> created a new campground
                            </a>
                        </div>
                        <% } %>
                    </div>
                    <% } %>
                </div>

                <a class="ui item" href="/logout">
                    Logout
                </a>
                <% } %>
            </div>
            <script>$('.ui.item.dropdown').dropdown();</script>
        </div>
    </div>

    <div class="ui grid main container">
        <% if(error && error.length > 0) { %>
        <div class="row">
            <div class="ui floating error message six column wide" id="alert" role="alert">
                <div class="header"><%= errorHeader %></div>
                <%= error %>
            </div>
        </div>
        <% } %>
        <% if(success && success.length > 0) { %>
        <div class="row">
            <div class="ui floating success message six column wide" id="alert" role="alert">
                <div class="header"><%= successHeader %></div>
                <%= success %>
            </div>
        </div>
        <% } %>
        <% if(warning && warning.length > 0) { %>
        <div class="row">
            <div class="ui floating warning message six column wide" id="alert" role="alert">
                <div class="header"><%= warningHeader %></div>
                <%= warning %>
            </div>
        </div>
        <% } %>
    </div>
